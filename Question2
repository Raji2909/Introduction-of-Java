package guviTask4;

public class Task4Q2 {
	 public static void checkEvenOdd(int number) {
	        if (number % 2 == 0) {
	            System.out.println(number + " is even.");
	        } else {
	            System.out.println(number + " is odd.");
	        }
	    }

	    public static void main(String[] args) {
	    	checkEvenOdd(10);  
	        checkEvenOdd(15); 
	        checkEvenOdd(40);
	        checkEvenOdd(24);
	        checkEvenOdd(37);
	        
	    }
}
